<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvConDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultation Date and Time"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvConType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvConDiagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diagnosis: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvConTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treatment: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvConDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="16dp"
        android:gravity="start">

        <!-- View Button -->
<!--        <Button-->
<!--            android:id="@+id/btnView"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:backgroundTint="@color/primary_button"-->
<!--            android:text="View"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:textAllCaps="false"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:drawableLeft="@drawable/vector_remove_red_eye_24"-->
<!--            />-->

        <!-- Edit Button -->
        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:backgroundTint="@color/black"
            android:text="Edit"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_marginEnd="8dp"
            android:drawableLeft="@drawable/vector_edit_24"
            />

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:backgroundTint="@android:color/holo_red_dark"
            android:drawableLeft="@drawable/vector_delete_24"
            android:paddingLeft="20dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
